<hibernate-configuration>
 
  <session-factory>
      <!-- Database connection settings -->
      <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
      <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <property name="connection.url">jdbc:mysql://localhost:3306/nutrition_info2?serverTimezone=UTC</property>
      <property name="connection.username">nutrition_info</property>
      <property name="hibernate.hbm2ddl.auto">create</property>

      <!-- Enable Hibernate's automatic session context management -->
      <property name="current_session_context_class">thread</property>
 
      <!-- Disable the second-level cache -->
      <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
 
      <!-- Echo all executed SQL to stdout -->
      <property name="show_sql">false</property> 
 
      <mapping class="com.siviglia.web.nutritioninfo.model.Products" />
      <mapping class="com.siviglia.web.nutritioninfo.model.Nutrients" />
 
  </session-factory>
 
</hibernate-configuration>
